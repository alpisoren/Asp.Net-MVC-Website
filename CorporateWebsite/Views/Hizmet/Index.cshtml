@model IEnumerable<CorporateWebsite.Models.Model.Hizmet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmetler</h2>
<a class="btn btn-default" href="/Hizmet/Create" >Yeni ekle </a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Resim Url</th>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.HizmetId</td>
            <td>@item.Baslik</td>
            <td>@Html.Raw(@item.Aciklama)</td>
            <td><img width="100" height="100" src="@item.ResimUrl" /></td>
            <td>
                <a href="/Hizmet/Edit/@item.HizmetId">Düzenle</a>
                <a href="/Hizmet/Delete/@item.HizmetId">Sil</a><
            </td>
        </tr>
        }


    </tbody>
</table>

