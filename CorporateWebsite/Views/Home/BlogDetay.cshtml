@model CorporateWebsite.Models.Model.Blog
@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>Blog</h2>
        </div>

    </div>
</section><!-- End Contact Section -->
<section id="blog" class="blog">
    <div class="container" data-aos="fade-up">

        <div class="row">

            <div class="col-lg-8 entries">
                


                    <article class="entry">

                        <div class="entry-img">
                            <img src="@Model.ResimURL" alt="@Model.Baslik" class="img-fluid">
                        </div>

                        <h2 class="entry-title">
                            <a href="/Home/BlogDetay/@Model.Baslik">@Model.Baslik</a>
                        </h2>

                        <div class="entry-meta">
                            <ul>
                                <li class="d-flex align-items-center"><i class="bi bi-person"></i> <a href="#">@Model.Kategori.KategoriAd</a></li>
                              
                            </ul>
                        </div>

                        <div class="entry-content">
                            <p>
                                @Html.Raw(Model.Icerik);
                            </p>
                            
                        </div>

                    </article><!-- End blog entry -->


            

            </div><!-- End blog entries list -->

            <div class="col-lg-4">

                <div class="sidebar">
                    <div class="widget">

                        @{
                            Html.RenderAction("BlogKategoriPartial", "Home");
                        }
                    </div>

                    <div class="widget">

                        @{
                            Html.RenderAction("BlogSonKayitPartial", "Home");
                        }
                    </div>





                    <h3 class="sidebar-title">Tags</h3>
                    <div class="sidebar-item tags">
                        <ul>
                            <li><a href="#">App</a></li>
                            <li><a href="#">IT</a></li>
                            <li><a href="#">Business</a></li>
                            <li><a href="#">Mac</a></li>
                            <li><a href="#">Design</a></li>
                            <li><a href="#">Office</a></li>
                            <li><a href="#">Creative</a></li>
                            <li><a href="#">Studio</a></li>
                            <li><a href="#">Smart</a></li>
                            <li><a href="#">Tips</a></li>
                            <li><a href="#">Marketing</a></li>
                        </ul>
                    </div><!-- End sidebar tags-->

                </div><!-- End sidebar -->

            </div><!-- End blog sidebar -->

        </div>

    </div>
</section>



