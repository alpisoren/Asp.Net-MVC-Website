@model IEnumerable<CorporateWebsite.Models.Model.Slider>


@{
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
    ViewBag.Title = "Index";
}
<section class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>Anasayfa</h2>
        </div>

    </div>
</section>

<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex justify-cntent-center align-items-center">
    @*@{
           Html.RenderAction("SliderPartial", "Home");
        }*@


    <div id="heroCarousel" class="container carousel carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">

        @if (Model == null)
        {
            <div class="carousel-item active">
                <div class="carousel-container">

                    @*<img src="@item.ResimURL" alt="@item.Baslik" />*@
                    <h2 class="animate__animated animate__fadeInDown"><span>Model Bulunamadı</span></h2>
                    <p class="animate__animated animate__fadeInUp"> Model Bulunamadı</p>
                    <a href="" class="btn-get-started animate__animated animate__fadeInUp">Daha Fazlası için..</a>
                </div>
            </div>
        }
        else
        {
            int say = 0;
            <!-- Slide 1 -->
            foreach (var item in Model)
            {



                if (say < 1)
                {
                    <div class="carousel-item active ">
                        <div class="carousel-container">

                            <img src="@item.ResimURL" alt="@item.Baslik" />
                            <h2 class="animate__animated animate__fadeInDown"><span>@item.Baslik</span></h2>
                            <p class="animate__animated animate__fadeInUp"> @item.Aciklama</p>
                            <a href="" class="btn-get-started animate__animated animate__fadeInUp">Daha Fazlası için..</a>
                        </div>
                    </div>

                }
                else
                {


                    <div class="carousel-item  ">
                        <div class="carousel-container">

                            <img src="@item.ResimURL" alt="@item.Baslik" />
                            <h2 class="animate__animated animate__fadeInDown"><span>@item.Baslik</span></h2>
                            <p class="animate__animated animate__fadeInUp"> @item.Aciklama</p>
                            <a href="" class="btn-get-started animate__animated animate__fadeInUp">Daha Fazlası için..</a>
                        </div>
                    </div>


                }
                say++;
            }
        }
        <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bx bx-chevron-left" aria-hidden="true"></span>
        </a>

        <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon bx bx-chevron-right" aria-hidden="true"></span>
        </a>

    </div>

</section><!-- End Hero -->

<main id="main">


    <!-- ======= Services Section ======= -->
    @{
        Html.RenderAction("HizmetPartipal", "Home");
    }

    <!-- End Services Section -->


</main>
