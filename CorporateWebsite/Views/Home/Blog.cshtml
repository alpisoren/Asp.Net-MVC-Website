
@using PagedList;
@using PagedList.Mvc;
@using CorporateWebsite.Helper;

@model IPagedList<CorporateWebsite.Models.Model.Blog>
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<!-- ======= Contact Section ======= -->
<section class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>Blog</h2>
        </div>

    </div>
</section><!-- End Contact Section -->
<section id="blog" class="blog">
    <div class="container" data-aos="fade-up">

        <div class="row">

            <div class="col-lg-8 entries">
            @foreach (var item in Model)
            {


                <article class="entry">

                    <div class="entry-img">
                        <img src="@item.ResimURL" alt="@item.BlogId" class="img-fluid">
                    </div>

                    <h2 class="entry-title">
                        <a href="/Blog/@SeoHelper.ToSeoUrl(item.Baslik).ToLower()-@item.BlogId">@item.Baslik</a>
                    </h2>

                    <div class="entry-meta">
                        <ul>
                            <li class="d-flex align-items-center"><i class="bi bi-person"></i> <a href="#">@item.Kategori.KategoriAd</a></li>
                            @*<li class="d-flex align-items-center"><i class="bi bi-chat-dots"></i> <a href="blog-single.html">12 Comments</a></li>*@
                        </ul>
                    </div>

                    <div class="entry-content">
                        <p>@Html.Raw(item.Icerik?.Substring(0, item.Icerik.Length/5));
                        </p>
                        <div class="read-more">
                            <a href="/Home/BlogDetay/@item.BlogId">Devamı..</a>
                        </div>
                    </div>

                </article><!-- End blog entry -->


            }

                <div class="blog-pagination">

                   @Html.PagedListPager(Model,Page=>Url.Action("Blog",new {Page}),PagedListRenderOptions.Classic)
                </div>

            </div><!-- End blog entries list -->

            <div class="col-lg-4">

                <div class="sidebar">

                    <h3 class="sidebar-title">Search</h3>
                    <div class="sidebar-item search-form">
                        <form action="">
                            <input type="text">
                            <button type="submit"><i class="bi bi-search"></i></button>
                        </form>
                    </div><!-- End sidebar search formn-->

                    <div class="widget">

                        @{
                            Html.RenderAction("BlogKategoriPartial", "Home");
                        }
                    </div>

                    <!-- End sidebar recent posts-->
                    <div class="widget">

                        @{
                            Html.RenderAction("BlogSonKayitPartial", "Home");
                        }
                    </div>



                    <h3 class="sidebar-title">Tags</h3>
                    <div class="sidebar-item tags">
                        <ul>
                            <li><a href="#">App</a></li>
                            <li><a href="#">IT</a></li>
                            <li><a href="#">Business</a></li>
                            <li><a href="#">Mac</a></li>
                            <li><a href="#">Design</a></li>
                            <li><a href="#">Office</a></li>
                            <li><a href="#">Creative</a></li>
                            <li><a href="#">Studio</a></li>
                            <li><a href="#">Smart</a></li>
                            <li><a href="#">Tips</a></li>
                            <li><a href="#">Marketing</a></li>
                        </ul>
                    </div><!-- End sidebar tags-->

                </div><!-- End sidebar -->

            </div><!-- End blog sidebar -->

        </div>

    </div>
</section>

