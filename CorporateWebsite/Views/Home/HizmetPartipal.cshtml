
@model IEnumerable<CorporateWebsite.Models.Model.Hizmet>
@{Layout = null; }

<div class="services">
    <div class="container">
        <div class="row">
            <h2>Hizmetlerimiz</h2>
            @foreach (var item in Model)
            {

                <div class="col-md-6 col-lg-3 d-flex align-items-stretch" data-aos="fade-up">
                    <div class="icon-box icon-box-blue">

                        <img class="icon-img" src="@item.ResimUrl" />
                        <h4 class="title"><a href="">@item.Baslik</a></h4>
                        @Html.Raw(item.Aciklama)


                    </div>
                </div>


            }
        </div>
    </div>

</div>